<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<!-- mapper의 위치를 알려주는 환경설정 -->
<configuration>
	
	<settings>
        <setting name="cacheEnabled" value="false" />
        <setting name="jdbcTypeForNull" value="NULL" />
    </settings>

	<!-- sql의 위치 정보를 읽는 곳(spring만 사용시 mappers 만 있으면 됨) -->
	<mappers>
		<mapper resource="com/chan/mybatis/myPageMapper.xml"/>
		<mapper resource="com/chan/mybatis/adminMapper.xml"/>
		<mapper resource="com/chan/mybatis/productMapper.xml"/>
		<mapper resource="com/chan/mybatis/JoinMapper.xml"/>
		<mapper resource="com/chan/mybatis/recipeMapper.xml"/>
		<mapper resource="com/chan/mybatis/cartMapper.xml"/>
		<mapper resource="com/chan/mybatis/helpMapper.xml"/>
		<mapper resource="com/chan/mybatis/recipeMapper.xml"/>
		<mapper resource="com/chan/mybatis/orderMapper.xml"/>
		<mapper resource="com/chan/mybatis/mainMapper.xml"/>
		
	</mappers>

</configuration>

